<div class="container text-center">
  <div class="signup">
    <div class="mb-2">
      <%= image_tag('Q.png', width: 60) %>
    </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-inputs justify-content-between mx-2">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      label: false,
                      placeholder: "Bob@example.com",
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      label: false,
                      placeholder: "Password",
                      input_html: { autocomplete: "current-password" } %>
            <div class="d-flex justify-content-between font-weight-lighter">
              <small><%= f.input :remember_me, label: "Keep me signed in", as: :boolean if devise_mapping.rememberable? %></small>
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <small><%= link_to "Forgot Password?", new_password_path(resource_name) %></small><br />
              <% end %>
            </div>

          <div class="form-actions">
            <%= f.button :submit, "Log In", class: "btn btn-green text-white font-weight-bolder w-100 mb-2" %>
            <table width="100%">
              <tr>
                <td><hr /></td>
                <td style="width:1px; white-space: nowrap;">OR</td>
                <td><hr /></td>
              </tr>
            </table>â€‹
            <p>Not yet a member?</p>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>
      </div>
  </div>
</div>

