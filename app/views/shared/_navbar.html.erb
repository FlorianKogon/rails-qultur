    <div>
      <%= image_tag ('logo.png'), class: 'logo' %>
    </div>
    <div class="information d-flex">
          <div>
            <%= image_tag ('coin.png'), class: 'logo-coin' %>
          </div>
          <div>
            <p>200</p>
          </div>
          <%= link_to "/users/#{current_user.id}/chat_rooms" do %>
