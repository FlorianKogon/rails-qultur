<div class="container">

  <div class="card-monument">
    <%= image_tag @monument.photo %>
    <h1><%= @monument.name %></h1>
    <div class="information-monuments">
      <p style="width: 350px;"> <%= @monument.description %> </p>
    </div>
    <!-- Test if monument is already captured by current_user -->
    <% if @monument.questions.present? %>
      <%= link_to 'Commencer le quiz', monument_question_path(@monument, @monument.questions.find_by(position: 1)), class: 'btn btn-block btn-green' %>
    <% else %>
      <%= link_to 'Retour Ã  la collection', root_path, class: 'btn btn-block btn-green' %>
    <% end %>
  </div>
</div>

