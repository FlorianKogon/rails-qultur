<div class="container">

  <div class="d-flex justify-content-center mt-3">
    <%= simple_form_for :query, url: monuments_path, method: "GET", :html => {:class => "form-inline"} do |f| %>
      <%= f.input :address, collection: Monument::CITY, label: false %>
      <%= f.submit "Visiter!", class: "btn btn-green ml-3 mb-3" %>
    <% end %>
  </div>

</div>

<div id="map"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
