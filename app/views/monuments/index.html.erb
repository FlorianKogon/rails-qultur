<div class="f-flex align-items-center">
  <% @captured_monuments.each do |monument| %>
    <div class="card-gradient m-2" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= monument.photo %>); background-position: center; background-size: cover;">
      <%= link_to monument_path(monument) do %>
        <div class="card-monument-anim">
          <h2 class="title"><%= monument.name %></h2>
          <i class="far fa-check-circle"></i>
          </div>
      <% end %>
    </div>
  <% end %>

  <% @visited_monuments.each do |monument| %>
    <div class="card-gradient not-captured m-2" style="background-image: linear-gradient(135deg, rgba(0,0,0,0.3),rgba(0,0,0,0.5)), url(<%= monument.photo %>); background-position: center; background-size: cover;">
      <div class="card-monument-anim">
        <h2 class="title"><%= monument.name %></h2>
        <i class="far fa-circle"></i>
      </div>
    </div>
  <% end %>
</div>
