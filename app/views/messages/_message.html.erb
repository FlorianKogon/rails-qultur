<div class="message <%= user_is_messages_author ? "right" : "" %>">
  <%= link_to user_path(message.user) do %>
    <%= cl_image_tag message.user.photo, class: "avatar" %>
  <% end %>
  <div class="message-content <%= user_is_messages_author ? "right" : "left" %>"><%= message.content%>
    <small><%= message.published_at %></small>
  </div>
</div>
