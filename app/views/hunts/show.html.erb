<div class="container text-center">

  <div class="m-2">
    <%= image_tag('logo.png', width: 80) %>
    <h1 class="title-qultur">QultuR</h1>
  </div>

  <%= image_tag @hunt.monument.photo, class: 'avatar-large' %>

  <% if @hunt.score >= 5 %>
    <h2 class="mt-5">Félicitations! <i class="fas fa-medal"></i></h2>
    <p>Tu as réussi le quiz avec un score de :</p>
    <h2><%= @hunt.score %> / 10</h2>
  <% else %>
    <h2 class="mt-5">Désolé! <i class="fas fa-sad-cry"></i></h2>
    <p>Tu n'as pas réussi le quiz... Tu as un score de :</p>
    <h2><%= @hunt.score %> / 10</h2>
  <% end %>

  <%= link_to 'Retour', monuments_path, class: 'btn btn-block btn-green mt-5 mb-2' %>

</div>
